#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"
echo 'ğŸ—ï¸ğŸ‘· Styling, testing and building your project before committing'

# Check Prettier standards
npm run format ||
(
    echo 'ğŸ¤¢ğŸ¤®ğŸ¤¢ğŸ¤® Uh Oh - Your styling looks disgusting. ğŸ¤¢ğŸ¤®ğŸ¤¢ğŸ¤®
            Prettier Check Failed. Run npm run prettier:fix, add changes and try commit again.';

            # Allows us to read user input below, assigns stdin to keyboard
            exec < /dev/tty

            while true; do
              read -p "[post-commit hook] Check for outdated gems? (Y/n) " yn
              if [ "$yn" = "" ]; then
                yn='Y'
              fi
              case $yn in
                  [Yy] ) npm run format:fix;;
                  [Nn] ) exit;;
                  * ) echo "Please answer y or n for yes or no.";;
              esac
            done
)

# Check ESLint Standards
npm run lint ||
(
        echo 'ğŸ˜¤ğŸ€ğŸ‘‹ğŸ˜¤ Get that weak sauce out of here! ğŸ˜¤ğŸ€ğŸ‘‹ğŸ˜¤
                ESLint Check Failed. Make the required changes listed above, add changes and try to commit again.'
        false;
)

# Check tsconfig standards
#npm run check-types ||
#(
#    echo 'ğŸ¤¡ğŸ˜‚âŒğŸ¤¡ Failed Type check. ğŸ¤¡ğŸ˜‚âŒğŸ¤¡
#            Are you seriously trying to write that? Make the changes required above.'
#    false;
#)

# If everything passes... Now we can commit
echo 'ğŸ¤”ğŸ¤”ğŸ¤”ğŸ¤”... Alright... Code looks good to me... Trying to build now. ğŸ¤”ğŸ¤”ğŸ¤”ğŸ¤”'

npm run build ||
(
    echo 'âŒğŸ‘·ğŸ”¨âŒ Better call Bob... Because your build failed âŒğŸ‘·ğŸ”¨âŒ
            Next build failed: View the errors above to see why.
    '
    false;
)

# If everything passes... Now we can commit
echo 'âœ…âœ…âœ…âœ… You win this time... I am committing this now. âœ…âœ…âœ…âœ…'

